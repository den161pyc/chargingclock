<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background" android:gravity="center_vertical">
        <shape>
            <corners android:radius="3dp"/>
            <solid android:color="#444444"/>
            <size android:height="6dp"/> </shape>
    </item>

    <item android:id="@android:id/secondaryProgress" android:gravity="center_vertical">
        <scale android:scaleWidth="100%">
            <shape>
                <corners android:radius="3dp"/>
                <solid android:color="#555555"/>
                <size android:height="6dp"/>
            </shape>
        </scale>
    </item>

    <item android:id="@android:id/progress" android:gravity="center_vertical">
        <scale android:scaleWidth="100%">
            <shape>
                <corners android:radius="3dp"/>
                <solid android:color="#448AFF"/>
                <size android:height="6dp"/>
            </shape>
        </scale>
    </item>
</layer-list>