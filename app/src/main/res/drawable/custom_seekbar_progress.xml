<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background" android:gravity="center_vertical">
        <shape>
            <corners android:radius="8dp"/>
            <gradient
                android:startColor="#222222"
                android:centerColor="#333333"
                android:endColor="#444444"
                android:angle="270"
                />
            <size android:height="10dp"/>
            <stroke android:width="1dp" android:color="#111111"/> </shape>
    </item>

    <item android:id="@android:id/secondaryProgress" android:gravity="center_vertical">
        <scale android:scaleWidth="100%">
            <shape>
                <corners android:radius="8dp"/>
                <solid android:color="#555555"/>
                <size android:height="10dp"/>
            </shape>
        </scale>
    </item>

    <item android:id="@android:id/progress" android:gravity="center_vertical">
        <scale android:scaleWidth="100%">
            <shape>
                <corners android:radius="8dp"/>
                <size android:height="10dp"/>
                <gradient
                    android:startColor="#82B1FF"
                    android:centerColor="#2979FF"
                    android:endColor="#1565C0"
                    android:angle="270"
                    />
            </shape>
        </scale>
    </item>
</layer-list>