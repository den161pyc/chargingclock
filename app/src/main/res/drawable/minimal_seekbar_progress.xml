<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background" android:gravity="center_vertical">
        <shape android:shape="rectangle">
            <corners android:radius="1dp"/>
            <size android:height="2dp"/>
            <solid android:color="#40FFFFFF"/>
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress" android:gravity="center_vertical">
        <scale android:scaleWidth="100%">
            <shape android:shape="rectangle">
                <corners android:radius="1dp"/>
                <size android:height="2dp"/>
                <solid android:color="#60FFFFFF"/>
            </shape>
        </scale>
    </item>

    <item android:id="@android:id/progress" android:gravity="center_vertical">
        <scale android:scaleWidth="100%">
            <shape android:shape="rectangle">
                <corners android:radius="1dp"/>
                <size android:height="2dp"/>
                <solid android:color="#FFFFFF"/>
            </shape>
        </scale>
    </item>
</layer-list>