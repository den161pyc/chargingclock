<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <size android:height="24dp"/>
            <gradient
                android:startColor="#1565C0"
                android:centerColor="#2979FF"
                android:endColor="#82B1FF"
                android:angle="270"/>
            <stroke android:width="1dp" android:color="#0D47A1"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <size android:height="24dp"/>
            <gradient
                android:startColor="#222222"
                android:centerColor="#333333"
                android:endColor="#444444"
                android:angle="270"/>
            <stroke android:width="1dp" android:color="#111111"/>
        </shape>
    </item>
</selector>