<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/black">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Настройки"
        android:textColor="@android:color/white"
        android:textSize="32sp"
        android:layout_marginBottom="24dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Режим экрана:"
                android:textColor="#AAAAAA"
                android:textSize="14sp"/>

            <RadioGroup
                android:id="@+id/rgDisplayMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RadioButton android:id="@+id/rbModeClock" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Только часы" android:textColor="@android:color/white"/>
                <RadioButton android:id="@+id/rbModeSplit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Разделение экрана (50/50)" android:textColor="@android:color/white"/>
            </RadioGroup>

            <LinearLayout
                android:id="@+id/containerClockOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:layout_marginTop="8dp"
                android:visibility="gone">
                <Switch
                    android:id="@+id/switchShowDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Показывать дату"
                    android:textColor="@android:color/white"
                    android:minHeight="48dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/containerSplitOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:layout_marginTop="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Справа показывать:"
                    android:textColor="#AAAAAA"
                    android:textSize="14sp"/>
                <RadioGroup
                    android:id="@+id/rgSideContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RadioButton android:id="@+id/rbSideDate" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Дата" android:textColor="@android:color/white"/>
                    <RadioButton android:id="@+id/rbSideCalendar" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Календарь" android:textColor="@android:color/white"/>
                    <RadioButton android:id="@+id/rbSideWeather" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Погода" android:textColor="@android:color/white"/>
                </RadioGroup>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#333333"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Цвет текста:"
                android:textColor="#AAAAAA"
                android:textSize="14sp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">
                <RadioGroup
                    android:id="@+id/rgTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton android:id="@+id/rbTextWhite" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Белый" android:textColor="#FFFFFF" android:paddingEnd="8dp"/>
                    <RadioButton android:id="@+id/rbTextGreen" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Зеленый" android:textColor="#00FF00" android:paddingEnd="8dp"/>
                    <RadioButton android:id="@+id/rbTextCyan" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Циан" android:textColor="#00FFFF" android:paddingEnd="8dp"/>
                    <RadioButton android:id="@+id/rbTextYellow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Желтый" android:textColor="#FFFF00" android:paddingEnd="8dp"/>
                    <RadioButton android:id="@+id/rbTextRed" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Красный" android:textColor="#FF0000" android:paddingEnd="8dp"/>
                </RadioGroup>
            </HorizontalScrollView>

            <LinearLayout
                android:id="@+id/containerBgColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Цвет фона (если нет картинки):"
                    android:textColor="#AAAAAA"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">
                    <RadioGroup
                        android:id="@+id/rgBgColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RadioButton android:id="@+id/rbBgBlack" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Черный" android:textColor="#FFFFFF" android:paddingEnd="8dp"/>
                        <RadioButton android:id="@+id/rbBgGray" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Серый" android:textColor="#888888" android:paddingEnd="8dp"/>
                        <RadioButton android:id="@+id/rbBgDarkBlue" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Т.Синий" android:textColor="#448AFF" android:paddingEnd="8dp"/>
                        <RadioButton android:id="@+id/rbBgDarkRed" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Т.Красный" android:textColor="#FF5252" android:paddingEnd="8dp"/>
                        <RadioButton android:id="@+id/rbBgDarkGreen" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Т.Зеленый" android:textColor="#69F0AE" android:paddingEnd="8dp"/>
                    </RadioGroup>
                </HorizontalScrollView>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Фоновая картинка:"
                android:textColor="#AAAAAA"
                android:textSize="14sp"
                android:layout_marginTop="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnSelectBgImage"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Выбрать фото"
                    android:backgroundTint="#444444"/>
                <Button
                    android:id="@+id/btnResetBgImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X"
                    android:backgroundTint="#AA0000"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvAlphaLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Прозрачность картинки: 100%"
                android:textColor="#AAAAAA"
                android:textSize="12sp"
                android:layout_marginTop="4dp"/>

            <SeekBar
                android:id="@+id/seekBarAlpha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="255"
                android:progress="255"
                android:progressTint="@color/accent_blue"
                android:thumbTint="@color/accent_blue"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#333333"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

            <Switch
                android:id="@+id/switchAutoBrightness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Авто-затемнение (ночной режим)"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:minHeight="48dp"/>

            <LinearLayout
                android:id="@+id/containerRedTint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:visibility="gone">

                <Switch
                    android:id="@+id/switchRedTint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Красный оттенок (как в iOS 17)"
                    android:textColor="#DDDDDD"
                    android:textSize="16sp"
                    android:minHeight="40dp"/>
            </LinearLayout>

            <Switch
                android:id="@+id/switchAutoLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Авто-определение места"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:minHeight="48dp"/>

            <Switch
                android:id="@+id/switchShowBattery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Показывать статус зарядки"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:minHeight="48dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="API Ключ Яндекс.Погоды:"
                android:textColor="#AAAAAA"
                android:textSize="14sp"
                android:layout_marginTop="8dp"/>

            <EditText
                android:id="@+id/etApiKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:textColor="@android:color/white"
                android:hint="Вставьте ключ здесь"
                android:textColorHint="#555555"
                android:inputType="text"
                android:textSize="14sp"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/tvFontLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Шрифт: Стандартный"
                android:textColor="#AAAAAA"
                android:textSize="14sp"
                android:layout_marginTop="16dp"/>

            <Button
                android:id="@+id/btnSelectFont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Выбрать шрифт (.ttf)"
                android:backgroundTint="#444444"/>

            <Button
                android:id="@+id/btnResetFont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Сбросить шрифт"
                android:backgroundTint="#444444"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#333333"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:id="@+id/containerThemeColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginTop="16dp">
                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#333333" android:layout_marginBottom="16dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Цвет выделения календаря:"
                    android:textColor="#AAAAAA"
                    android:textSize="14sp"/>
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:layout_marginTop="8dp">
                    <RadioGroup
                        android:id="@+id/rgThemeColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RadioButton android:id="@+id/rbColorBlue" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Синий" android:textColor="@android:color/white" android:buttonTint="@color/accent_blue" android:paddingEnd="16dp"/>
                        <RadioButton android:id="@+id/rbColorRed" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Красный" android:textColor="@android:color/white" android:buttonTint="@color/accent_red" android:paddingEnd="16dp"/>
                        <RadioButton android:id="@+id/rbColorGreen" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Зеленый" android:textColor="@android:color/white" android:buttonTint="@color/accent_green" android:paddingEnd="16dp"/>
                        <RadioButton android:id="@+id/rbColorYellow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Желтый" android:textColor="@android:color/white" android:buttonTint="@color/accent_yellow" android:paddingEnd="16dp"/>
                        <RadioButton android:id="@+id/rbColorPurple" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Фиолет" android:textColor="@android:color/white" android:buttonTint="@color/accent_purple" android:paddingEnd="16dp"/>
                    </RadioGroup>
                </HorizontalScrollView>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#333333"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"/>

            <Switch
                android:id="@+id/switchBgMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Авто-запуск при подключении зарядки"
                android:textColor="@color/accent_blue"
                android:textStyle="bold"
                android:textSize="18sp"
                android:minHeight="48dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Приложение само откроется при зарядке и закроется при отключении."
                android:textColor="#888888"
                android:textSize="12sp"
                android:layout_marginBottom="16dp"/>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Назад"
        android:layout_marginTop="16dp"/>
</LinearLayout>