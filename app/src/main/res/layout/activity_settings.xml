<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/black"> <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Настройки"
    android:textColor="@android:color/white"
    android:textSize="34sp"
    android:textStyle="bold"
    android:layout_marginStart="24dp"
    android:layout_marginTop="24dp"
    android:layout_marginBottom="16dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_settings_card"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="12dp"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Режим экрана"
                    android:textColor="#AAAAAA"
                    android:textSize="14sp"
                    android:layout_marginBottom="12dp"/>

                <RadioGroup
                    android:id="@+id/rgDisplayMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RadioButton android:id="@+id/rbModeClock" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Только часы" android:textColor="@android:color/white" android:layout_marginBottom="8dp"/>
                    <RadioButton android:id="@+id/rbModeSplit" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Разделение экрана (50/50)" android:textColor="@android:color/white"/>
                </RadioGroup>

                <LinearLayout
                    android:id="@+id/containerClockOptions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    android:visibility="gone">
                    <Switch
                        android:id="@+id/switchShowDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Показывать дату"
                        android:textColor="@android:color/white"
                        android:minHeight="48dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/containerSplitOptions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp">
                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#333333" android:layout_marginBottom="12dp" android:layout_marginTop="4dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Справа показывать:"
                        android:textColor="#AAAAAA"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp"/>
                    <RadioGroup
                        android:id="@+id/rgSideContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RadioButton android:id="@+id/rbSideDate" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Дата" android:textColor="@android:color/white"/>
                        <RadioButton android:id="@+id/rbSideCalendar" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Календарь" android:textColor="@android:color/white"/>
                        <RadioButton android:id="@+id/rbSideWeather" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Погода" android:textColor="@android:color/white"/>
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_settings_card"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="12dp"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Внешний вид"
                    android:textColor="#AAAAAA"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Цвет текста"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"/>

                    <RadioGroup
                        android:id="@+id/rgTextColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RadioButton android:id="@+id/rbTextWhite" android:layout_width="24dp" android:layout_height="24dp" android:background="@drawable/bg_circle_shape" android:backgroundTint="#FFFFFF" android:button="@drawable/selector_radio_check" android:layout_marginStart="8dp"/>
                        <RadioButton android:id="@+id/rbTextGreen" android:layout_width="24dp" android:layout_height="24dp" android:background="@drawable/bg_circle_shape" android:backgroundTint="#00FF00" android:button="@drawable/selector_radio_check" android:layout_marginStart="8dp"/>
                        <RadioButton android:id="@+id/rbTextCyan" android:layout_width="24dp" android:layout_height="24dp" android:background="@drawable/bg_circle_shape" android:backgroundTint="#00FFFF" android:button="@drawable/selector_radio_check" android:layout_marginStart="8dp"/>
                        <RadioButton android:id="@+id/rbTextYellow" android:layout_width="24dp" android:layout_height="24dp" android:background="@drawable/bg_circle_shape" android:backgroundTint="#FFFF00" android:button="@drawable/selector_radio_check" android:layout_marginStart="8dp"/>
                        <RadioButton android:id="@+id/rbTextRed" android:layout_width="24dp" android:layout_height="24dp" android:background="@drawable/bg_circle_shape" android:backgroundTint="#FF0000" android:button="@drawable/selector_radio_check" android:layout_marginStart="8dp"/>
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/containerBgColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Цвет фона"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"/>

                    <RadioGroup
                        android:id="@+id/rgBgColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RadioButton android:id="@+id/rbBgBlack" android:layout_width="24dp" android:layout_height="24dp" android:background="@drawable/bg_circle_shape" android:backgroundTint="#333333" android:button="@drawable/selector_radio_check" android:layout_marginStart="8dp"/>
                        <RadioButton android:id="@+id/rbBgGray" android:layout_width="24dp" android:layout_height="24dp" android:background="@drawable/bg_circle_shape" android:backgroundTint="#888888" android:button="@drawable/selector_radio_check" android:layout_marginStart="8dp"/>
                        <RadioButton android:id="@+id/rbBgDarkBlue" android:layout_width="24dp" android:layout_height="24dp" android:background="@drawable/bg_circle_shape" android:backgroundTint="#448AFF" android:button="@drawable/selector_radio_check" android:layout_marginStart="8dp"/>
                        <RadioButton android:id="@+id/rbBgDarkRed" android:layout_width="24dp" android:layout_height="24dp" android:background="@drawable/bg_circle_shape" android:backgroundTint="#FF5252" android:button="@drawable/selector_radio_check" android:layout_marginStart="8dp"/>
                        <RadioButton android:id="@+id/rbBgDarkGreen" android:layout_width="24dp" android:layout_height="24dp" android:background="@drawable/bg_circle_shape" android:backgroundTint="#69F0AE" android:button="@drawable/selector_radio_check" android:layout_marginStart="8dp"/>
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/containerThemeColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Выделение"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"/>

                    <RadioGroup
                        android:id="@+id/rgThemeColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RadioButton android:id="@+id/rbColorBlue" android:layout_width="24dp" android:layout_height="24dp" android:background="@drawable/bg_circle_shape" android:backgroundTint="#448AFF" android:button="@drawable/selector_radio_check" android:layout_marginStart="8dp"/>
                        <RadioButton android:id="@+id/rbColorRed" android:layout_width="24dp" android:layout_height="24dp" android:background="@drawable/bg_circle_shape" android:backgroundTint="#FF5252" android:button="@drawable/selector_radio_check" android:layout_marginStart="8dp"/>
                        <RadioButton android:id="@+id/rbColorGreen" android:layout_width="24dp" android:layout_height="24dp" android:background="@drawable/bg_circle_shape" android:backgroundTint="#69F0AE" android:button="@drawable/selector_radio_check" android:layout_marginStart="8dp"/>
                        <RadioButton android:id="@+id/rbColorYellow" android:layout_width="24dp" android:layout_height="24dp" android:background="@drawable/bg_circle_shape" android:backgroundTint="#FFFF00" android:button="@drawable/selector_radio_check" android:layout_marginStart="8dp"/>
                        <RadioButton android:id="@+id/rbColorPurple" android:layout_width="24dp" android:layout_height="24dp" android:background="@drawable/bg_circle_shape" android:backgroundTint="#E040FB" android:button="@drawable/selector_radio_check" android:layout_marginStart="8dp"/>
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_settings_card"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="12dp"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Фон"
                    android:textColor="#AAAAAA"
                    android:textSize="14sp"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">
                    <Button
                        android:id="@+id/btnSelectBgImage"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Выбрать фото"
                        android:backgroundTint="#333333"/>
                    <Button
                        android:id="@+id/btnResetBgImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Сброс"
                        android:backgroundTint="#550000"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvAlphaLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Прозрачность: 100%"
                    android:textColor="#AAAAAA"
                    android:textSize="12sp"
                    android:layout_marginBottom="4dp"/>

                <SeekBar
                    android:id="@+id/seekBarAlpha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="255"
                    android:progress="255"
                    android:progressTint="@color/accent_blue"
                    android:thumbTint="@color/accent_blue"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_settings_card"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="12dp"
                android:padding="20dp">

                <Switch
                    android:id="@+id/switchAutoBrightness"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Авто-затемнение"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:minHeight="48dp"/>

                <LinearLayout
                    android:id="@+id/containerNightBrightness"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="4dp"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/tvNightBrightnessValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Яркость: 1%"
                        android:textColor="#AAAAAA"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"/>
                    <SeekBar
                        android:id="@+id/seekBarNightBrightness"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="100"
                        android:progress="1"
                        android:progressTint="@color/accent_blue"
                        android:thumbTint="@color/accent_blue"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/containerRedTint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <Switch
                        android:id="@+id/switchRedTint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Красный текст в темноте"
                        android:textColor="#DDDDDD"
                        android:textSize="14sp"
                        android:paddingStart="12dp"
                        android:minHeight="40dp"/>
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#333333" android:layout_marginVertical="8dp"/>

                <Switch
                    android:id="@+id/switchAutoLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Авто-локация"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:minHeight="48dp"/>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#333333" android:layout_marginVertical="8dp"/>

                <Switch
                    android:id="@+id/switchShowBattery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Статус зарядки"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:minHeight="48dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_settings_card"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="12dp"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="API Ключ (Яндекс)"
                    android:textColor="#AAAAAA"
                    android:textSize="14sp"/>
                <EditText
                    android:id="@+id/etApiKey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#555555"
                    android:textColor="@android:color/white"
                    android:hint="Вставьте ключ"
                    android:textColorHint="#555555"
                    android:inputType="text"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:id="@+id/tvFontLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Шрифт: Стандартный"
                    android:textColor="#AAAAAA"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btnSelectFont"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Выбрать"
                        android:backgroundTint="#333333"/>
                    <Button
                        android:id="@+id/btnResetFont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Сброс"
                        android:backgroundTint="#333333"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_settings_card"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="24dp"
                android:padding="20dp">

                <Switch
                    android:id="@+id/switchBgMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Авто-запуск при зарядке"
                    android:textColor="@color/accent_blue"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:minHeight="48dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Автоматически открывать и закрывать приложение при подключении кабеля."
                    android:textColor="#888888"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Готово"
        android:textStyle="bold"
        android:backgroundTint="#333333"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"/>
</LinearLayout>