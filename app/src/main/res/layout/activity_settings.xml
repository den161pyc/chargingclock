<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Настройки"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Внешний вид"
            android:textColor="#AAAAAA"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Цвет темы:"
            android:textColor="#FFFFFF"/>

        <RadioGroup
            android:id="@+id/rgThemeColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">
            <RadioButton android:id="@+id/rbThemeBlue" android:text="Синий" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"/>
            <RadioButton android:id="@+id/rbThemeRed" android:text="Красн" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"/>
            <RadioButton android:id="@+id/rbThemeGreen" android:text="Зелен" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"/>
            <RadioButton android:id="@+id/rbThemeYellow" android:text="Желтый" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"/>
        </RadioGroup>

        <CheckBox
            android:id="@+id/cbSplitMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Раздельный экран (Split Mode)"
            android:textColor="#FFFFFF"
            android:buttonTint="#FFFFFF"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Контент сбоку (для Split Mode):"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp"/>

        <RadioGroup
            android:id="@+id/rgSideContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">
            <RadioButton android:id="@+id/rbSideDate" android:text="Дата и Будильник" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/rbSideCalendar" android:text="Календарь" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/rbSideWeather" android:text="Погода (подробно)" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/rbSideMusic" android:text="Музыка" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Погода"
            android:textColor="#AAAAAA"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/rgWeatherProvider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton android:id="@+id/rbYandex" android:text="Яндекс" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"/>
            <RadioButton android:id="@+id/rbOpenWeather" android:text="OpenWeather" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"/>
        </RadioGroup>

        <EditText
            android:id="@+id/etYandexKey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Yandex API Key"
            android:textColor="#FFFFFF"
            android:textColorHint="#666666"
            android:backgroundTint="#FFFFFF"/>

        <EditText
            android:id="@+id/etOwmKey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="OpenWeather API Key"
            android:textColor="#FFFFFF"
            android:textColorHint="#666666"
            android:backgroundTint="#FFFFFF"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Общие"
            android:textColor="#AAAAAA"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <CheckBox android:id="@+id/cbShowBattery" android:text="Заряд батареи" android:textColor="#FFFFFF" android:buttonTint="#FFFFFF" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/cbAutoBrightness" android:text="Автояркость" android:textColor="#FFFFFF" android:buttonTint="#FFFFFF" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/cbNightFilter" android:text="Ночной режим (фильтр)" android:textColor="#FFFFFF" android:buttonTint="#FFFFFF" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/cbAutoLocation" android:text="Авто-локация" android:textColor="#FFFFFF" android:buttonTint="#FFFFFF" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/cbShowNextAlarm" android:text="След. будильник" android:textColor="#FFFFFF" android:buttonTint="#FFFFFF" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="32dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">
            <Button android:id="@+id/btnCancel" android:text="Отмена" android:backgroundTint="#555555" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginEnd="8dp"/>
            <Button android:id="@+id/btnSave" android:text="Сохранить" android:backgroundTint="#009688" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>